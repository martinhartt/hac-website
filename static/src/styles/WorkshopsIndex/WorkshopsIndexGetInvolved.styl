.WorkshopsIndexGetInvolved {
  background-color: darken($Color__light, 5%);
  margin: 0 auto;
  padding: grid(4);
}

.WorkshopsIndexGetInvolved__content {

}

.WorkshopsIndexGetInvolvedRoles {
  display: flex;
  flex-wrap: wrap;
}

.WorkshopsIndexGetInvolvedRoles__role {
  flex-basis: 33.33%
  padding: 0.7em;
  box-sizing: border-box;
}

@media screen and (max-width: 900px) {
  .WorkshopsIndexGetInvolvedRoles__role {
    flex-basis: 50%;
  }
}

@media screen and (max-width: 660px) {
  .WorkshopsIndexGetInvolvedRoles__role {
    flex-basis: 100%;
  }
}


.WorkshopsIndexGetInvolvedRole__contentCard {
  background: white;
  width: 100%;
  height: 100%;
  padding: 1em;
  border-radius: $Layout__normalBorderRadius;
  box-shadow: 0px 2px 6px alpha(darken(white, 50%), 0.3);
}